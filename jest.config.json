{
  "fakeTimers": {
    "enableGlobally": true
  },
  "passWithNoTests": true,
  "preset": "ts-jest",
  "restoreMocks": true,
  "testMatch": [
    "**/?(*.)+(spec|test).[jt]s?(x)"
  ],
  "verbose": true,
  "modulePaths": [
    "."
  ],
  "moduleNameMapper": {
    "^@configs/([^/]*)$": "<rootDir>/packages/$1/src"
  }
}
